<div class="sb-slidebar sb-right sb-style-push sb-momentum-scrolling">
  {%- if section.settings.menu != blank -%}
  	<nav class="crim">
      {%- for link in section.settings.menu.links -%}
      	{%- if link.links != blank -%}
      		<li>
              <div id="category-menu">
              	<span class="mainHeaderNavColor">{{ link.title | escape }}</span>	
                <div class="category-list">
                  <ul id="appsItemCategoryTag">
                  	{%- for childlink in link.links -%}
                    <li class="appsItemCategoryTag_child">
                    	{%- if childlink.links == blank -%}
                      		<a href="{{ childlink.url }}" class="mainHeaderNavColor">{{ childlink.title | escape }}</a>
                      	{%- else -%}
                      		<a href="{{ childlink.url }}" class="mainHeaderNavColor">{{ childlink.title | escape }}</a>
                      		<ul class="appsItemCategoryTag_lowerchild">
                      			{%- for grandchildlink in childlink.links -%}
                              		<li><a href="{{ grandchildlink.url }}" class="mainHeaderNavColor appsItemCategoryTag_lowerLink">{{ grandchildlink.title | escape }}</a></li>
                              	{%- endfor -%}
                      		</ul>
                      	{%- endif -%} 
                    </li>
                    {%- endfor -%} 	
                  </ul>
                </div>
              </div>
      		</li>
      	{%- else -%}
      		<li><a class="mainHeaderNavColor" href="{{ link.url }}">{{ link.title | escape }}</a></li>
      	{%- endif -%}
      {%- endfor -%}
      <div class="column itemSearch">
      	
      </div>
  </nav>
  {%- endif -%}
</div>