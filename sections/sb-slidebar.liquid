<div class="sb-slidebar sb-right sb-style-push sb-momentum-scrolling">
    <nav class="crim">
      <ul>
        {%- if section.settings.skudebar_link != blank -%}
        {%- for link in section.settings.skudebar_link.links -%}
        <li>
            {%- if link.links != blank -%}
                <div id="category-menu">
                    <span class="mainHeaderNavColor">{{ link.title | escape }}</span>
                    <div class="category-list">
                        <ul id="appsItemCategoryTag">
                            {%- for childlink in link.links -%}
                            <li class="appsItemCategoryTag_child">
                                <a href="{{ childlink.url }}" class="mainHeaderNavColor">{{ childlink.title | escape }}</a>
                                {%- if childlink.links != blank -%}
                                <ul class="appsItemCategoryTag_lowerchild">
                                    {%- for grandchildlink in childlink.links -%}
                                    <li>
                                        <a href="{{ grandchildlink.url }}" class="mainHeaderNavColor appsItemCategoryTag_lowerLink">{{ grandchildlink.title | escape }}</a>
                                    </li>
                                    {%- endfor -%}
                                </ul>
                                {%- endif -%}
                            </li>
                            {%- endfor -%}
                        </ul>
                    </div>
                </div>
            {%- else -%}
                <a class="mainHeaderNavColor" href="{{ link.url }}">{{ link.title | escape }}</a>
            {%- endif -%}
        </li>
        {%- endfor -%}
        {%- endif -%}

        <div class="column itemSearch">
          <form id="x_itemSearchForm" class="itemSearch__form" action="{{ routes.search_url }}" method="get">
            <input 
            class="itemSearch__field yumin"
                type="text"
                name="q"
                id="s"
                placeholder="{{ 'general.search.search' | t }}"
                value="{{ search.terms | escape }}"
            />
            <button class="itemSearch__btn" type="submit"><span id="x_iconSearch" class="mainHeaderNavColor icon-search"></span></button>
          </form>
        </div>

      </ul>
    </nav>
</div>

{% schema %}
{
  "name": "t:sections.sb_skudebar.name",
  "settings": [
    {
        "type": "link_list",
        "id": "skudebar_link",
        "default": "main-menu",
        "label": "t:sections.sb_skudebar.settings.skudebar_link.label"
    }
  ]
}
{% endschema %}